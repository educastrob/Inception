# CRIAR CONTAINER DOCKER NGINX
# sudo docker run --name inception-nginx-ssl \
#   -p 80:80 -p 443:443 \
#   -v ~/Inception/srcs/nginx/index.html:/usr/share/nginx/html/index.html:ro \
#   -v ~/Inception/srcs/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro \
#   -v ~/Inception/srcs/nginx/certs:/etc/nginx/certs:ro \
#   -d nginx:stable-alpine


# LISTA CONTAINERS RODANDO
# docker ps (containers inicializados)
# docker ps -a (todos os containers)


# PARAR O CONTAINER
# docker stop inception-nginx-ssl


# REMOVE/APAGA CONTAINER
# docker rm inception-nginx-ssl


# INICIALIZA CONTAINER
# docker start inception-nginx-ssl


# ABRE O CONTAINER NO TERMINAL
# docker exec -it inception-nginx-ssl sh


# REINICIAR E ATUALIZAR CONTAINER
# docker exec inception-nginx-ssl nginx -s reload
